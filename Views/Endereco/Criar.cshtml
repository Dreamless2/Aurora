<div class="container">
    <form class="form-horizontal" role="form">
        <h2>Registrar Novo Endereço</h2>
        <div class="form-group">
            <label for="cep" class="col-sm-3 control-label">CEP</label>
            <div class="col-sm-9">
                <input type="text" id="cep" placeholder="CEP" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="nome" class="col-sm-3 control-label">Nome Completo</label>
            <div class="col-sm-9">
                <input type="text" id="nome" placeholder="Nome Completo" class="form-control" required>
            </div>
        </div>

        <div class="form-group">
            <label for="Endereço" class="col-sm-3 control-label">Endereço* </label>
            <div class="col-sm-9">
                <input type="text" id="endereco" placeholder="Endereço" class="form-control" required>
            </div>
        </div>

        <div class="form-group">
            <label for="numero" class="col-sm-3 control-label">Número*</label>
            <div class="col-sm-6">
                <input type="text" id="numero" placeholder="Número" class="form-control" required>
            </div>
            <label for="complemento" class="col-sm-3 control-label">Complemento</label>
            <div class="col-sm-9">
                <input type="text" id="complemento" placeholder="Complemento" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="birthDate" class="col-sm-3 control-label">Bairro* </label>
            <div class="col-sm-9">
                <input type="text" id="complemento" placeholder="Bairro" class="form-control" required>
            </div>
        </div>

        <div class="form-group">
            <label for="cidade" class="col-sm-3 control-label">Cidade* </label>
            <div class="col-sm-9">
                <input type="text" id="cidade" placeholder="Cidade" class="form-control" required>
            </div>
        </div>

        <div class="form-group">
            <label for="Height" class="col-sm-3 control-label">Estado* </label>
            <div class="col-sm-9">
                <input type="number" id="height" placeholder="Estado" class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <label for="weight" class="col-sm-3 control-label">Weight* </label>
            <div class="col-sm-9">
                <input type="number" id="weight" placeholder="Please write your weight in kilograms" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Gender</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="radio-inline">
                            <input type="radio" id="femaleRadio" value="Female">Female
                        </label>
                    </div>
                    <div class="col-sm-4">
                        <label class="radio-inline">
                            <input type="radio" id="maleRadio" value="Male">Male
                        </label>
                    </div>
                </div>
            </div>
        </div> <!-- /.form-group -->
        <div class="form-group">
            <div class="col-sm-9 col-sm-offset-3">
                <span class="help-block">*Required fields</span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form> <!-- /form -->
</div> <!-- ./container -->